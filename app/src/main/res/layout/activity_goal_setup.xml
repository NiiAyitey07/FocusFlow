<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/goal_setup_title"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Duration Label -->
        <TextView
            android:id="@+id/duration_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/goal_setup_duration_label"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <!-- Duration Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/duration_chips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:checkedChip="@id/chip_daily"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/duration_label">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_setup_duration_daily"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_setup_duration_weekly"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_setup_duration_monthly"
                style="@style/Widget.Material3.Chip.Filter" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Goal Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/goal_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/goal_setup_what_label"
            android:layout_marginTop="32dp"
            style="@style/FocusFlow.TextInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/duration_chips">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goal_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/goal_setup_what_hint"
                android:inputType="textCapSentences"
                android:maxLines="2" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Why Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/why_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/goal_setup_why_label"
            android:layout_marginTop="24dp"
            style="@style/FocusFlow.TextInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goal_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/why_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/goal_setup_why_hint"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Commit Button -->
        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/goal_setup_btn_commit"
            style="@style/FocusFlow.Button.Primary"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/why_input_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
