<?xml version="1.0" encoding="utf-8"?>
<!-- Primary button with glow effect -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/glow_green_medium">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_primary"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- Shadow/glow layer -->
            <item
                android:top="0dp"
                android:bottom="4dp"
                android:left="2dp"
                android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glow_green_soft"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <!-- Button layer -->
            <item
                android:top="0dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/green_primary"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
